{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "no-constant-condition": false
    },
    "rules": {
        "indent": [4],
        "linebreak-style": ["linux"],
        "quotes": ["double"],
        "semi": ["never"]
    }
}
