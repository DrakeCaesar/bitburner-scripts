{
  "name": "bitburner-scripts",
  "version": "1.0.0",
  "private": true,
  "description": "My own scripts for playing Bitburner",
  "keywords": [],
  "homepage": "https://github.com/DrakeCaesar/bitburner-scripts#readme",
  "bugs": {
    "url": "https://github.com/DrakeCaesar/bitburner-scripts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrakeCaesar/bitburner-scripts.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "types": "./NetscriptDefinitions.d.ts",
  "scripts": {
    "dev": "viteburner",
    "lint": "prettier --write . && eslint . --fix && sort-package-json",
    "up": "yarn install && npm-check-updates -u && yarn upgrade && sort-package-json",
    "watch": "yarn run watch:init && yarn run watch:all",
    "watch:all": "concurrently yarn:watch:transpile yarn:watch:local yarn:watch:remote",
    "watch:init": "node build/init.js",
    "watch:local": "node build/watch.js",
    "watch:remote": "bitburner-filesync",
    "watch:transpile": "tsc -w --preserveWatchOutput"
  },
  "prettier": {
    "quoteProps": "preserve",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "sonarjs"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": "latest",
          "project": "./tsconfig.json",
          "sourceType": "module"
        },
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "no-constant-condition": [
            "off"
          ],
          "no-restricted-imports": [
            "error",
            {
              "patterns": [
                ".*"
              ]
            }
          ],
          "@typescript-eslint/no-floating-promises": "error"
        }
      }
    ],
    "root": true
  },
  "eslintIgnore": [
    "node_modules/**",
    "dist/**",
    "NetscriptDefinitions.d.ts"
  ],
  "devDependencies": {
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "bitburner-filesync": "^1.2.0-beta4",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.1",
    "cspell": "^7.3.6",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.21.0",
    "fast-glob": "^3.3.1",
    "npm-check-updates": "^16.14.4",
    "prettier": "^3.0.3",
    "sort-package-json": "^2.5.1",
    "sync-directory": "^6.0.4",
    "typescript": "^5.2.2",
    "typescript-eslint": "^0.0.1-alpha.0",
    "vite": "^4.4.9",
    "viteburner": "^0.5.3"
  },
  "cspell": {
    "version": "0.2",
    "useGitignore": true,
    "words": [
      "avmnite-02h",
      "backreference",
      "backreferences",
      "bitburner",
      "bladeburner",
      "brutessh",
      "codingcontract",
      "CSEC",
      "darkweb",
      "Deepscan",
      "dles",
      "DRRURRD",
      "filesync",
      "fira",
      "ftpcrack",
      "fulcrumassets",
      "hacknet",
      "harakiri-sushi",
      "httpworm",
      "killall",
      "linebreak",
      "megacorp",
      "modar",
      "Mult",
      "n00dles",
      "Netscript",
      "paddinglevels",
      "relaysmtp",
      "run4theh111z",
      "rvest",
      "savegame",
      "scanline",
      "scanlines",
      "sonarjs",
      "spiralize",
      "sqlinject",
      "tprint",
      "tprintf",
      "unclickable",
      "Vigenere",
      "Vigen√®re",
      "viteburner",
      "xmodar",
      "yourusername"
    ],
    "ignorePaths": [
      "package-lock.json",
      "yarn.lock",
      "node_modules",
      "vscode-extension",
      ".git/objects",
      ".vscode",
      ".vscode-insiders",
      "dist",
      "index.d.ts"
    ]
  }
}
