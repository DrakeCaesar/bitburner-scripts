{
    "name": "bitburner-scripts",
    "version": "1.0.0",
    "description": "My own scripts for playing Bitburner",
    "main": "index.js",
    "scripts": {
        "watch:transpile": "tsc -w --preserveWatchOutput",
        "watch:local": "node build/watch.js",
        "watch:remote": "bitburner-filesync",
        "watch:init": "node build/init.js",
        "watch:all": "concurrently npm:watch:transpile npm:watch:local npm:watch:remote",
        "watch": "npm run watch:init && npm run watch:all"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DrakeCaesar/bitburner-scripts.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "types": "./index.d.ts",
    "bugs": {
        "url": "https://github.com/DrakeCaesar/bitburner-scripts/issues"
    },
    "homepage": "https://github.com/DrakeCaesar/bitburner-scripts#readme",
    "devDependencies": {
        "prettier": "^2.6.2",
        "@typescript-eslint/eslint-plugin": "^5.35.1",
        "@typescript-eslint/parser": "^5.35.1",
        "bitburner-filesync": "^1.1.5",
        "chokidar": "^3.5.3",
        "concurrently": "^7.4.0",
        "eslint": "^8.22.0",
        "fast-glob": "^3.2.12",
        "sync-directory": "^5.1.7",
        "typescript": "^4.7.4"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module",
            "no-constant-condition": false
        },
        "rules": {
            "indent": [
                "off",
                4,
                {
                    "SwitchCase": 1
                }
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "double"
            ],
            "semi": [
                "error",
                "never"
            ]
        }
    }
}
