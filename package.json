{
   "name": "bitburner-scripts",
   "version": "1.0.0",
   "private": true,
   "description": "My own scripts for playing Bitburner",
   "keywords": [],
   "homepage": "https://github.com/DrakeCaesar/bitburner-scripts#readme",
   "bugs": {
      "url": "https://github.com/DrakeCaesar/bitburner-scripts/issues"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/DrakeCaesar/bitburner-scripts.git"
   },
   "license": "ISC",
   "author": "",
   "main": "index.js",
   "types": "./NetscriptDefinitions.d.ts",
   "scripts": {
      "lint": "prettier --write . && eslint . --fix && sort-package-json",
      "start": "webpack",
      "up": "yarn install && npm-check-updates -u && yarn upgrade && sort-package-json",
      "watch": "npm run watch:init && npm run watch:all",
      "watch:all": "concurrently npm:watch:transpile npm:watch:local npm:watch:remote",
      "watch:init": "node build/init.js",
      "watch:local": "node build/watch.js",
      "watch:remote": "bitburner-filesync",
      "watch:transpile": "tsc -w --preserveWatchOutput"
   },
   "prettier": {
      "quoteProps": "preserve",
      "semi": false,
      "singleQuote": false,
      "tabWidth": 3,
      "trailingComma": "es5"
   },
   "eslintConfig": {
      "env": {
         "es2021": true,
         "node": true
      },
      "parserOptions": {
         "ecmaFeatures": {
            "jsx": true
         },
         "ecmaVersion": 12,
         "sourceType": "module"
      },
      "plugins": [
         "sonarjs"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:sonarjs/recommended",
         "prettier"
      ],
      "rules": {},
      "overrides": [
         {
            "files": [
               "**/*.ts",
               "**/*.tsx"
            ],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
               "project": [
                  "./tsconfig.json"
               ]
            },
            "plugins": [
               "@typescript-eslint"
            ],
            "extends": [
               "eslint:recommended",
               "plugin:@typescript-eslint/eslint-recommended",
               "plugin:@typescript-eslint/recommended",
               "plugin:@typescript-eslint/strict",
               "standard-with-typescript",
               "prettier"
            ]
         }
      ],
      "root": true
   },
   "eslintIgnore": [
      "dist",
      "node_modules"
   ],
   "devDependencies": {
      "@typescript-eslint/eslint-plugin": "^5.54.1",
      "@typescript-eslint/parser": "^5.54.1",
      "bitburner-filesync": "^1.1.5",
      "chokidar": "^3.5.3",
      "concurrently": "^7.6.0",
      "cspell": "^6.28.0",
      "eslint": "^8.35.0",
      "eslint-config-prettier": "^8.7.0",
      "eslint-config-standard-with-typescript": "^34.0.0",
      "eslint-plugin-import": "^2.27.5",
      "eslint-plugin-n": "^15.6.1",
      "eslint-plugin-promise": "^6.1.1",
      "eslint-plugin-sonarjs": "^0.18.0",
      "fast-glob": "^3.2.12",
      "npm-check-updates": "^16.7.10",
      "prettier": "^2.8.4",
      "sort-package-json": "^2.4.1",
      "sync-directory": "^6.0.3",
      "typescript": "^4.9.5",
      "typescript-eslint": "^0.0.1-alpha.0"
   },
   "cspell": {
      "version": "0.2",
      "useGitignore": true,
      "words": [
         "avmnite-02h",
         "bitburner",
         "brutessh",
         "codingcontract",
         "CSEC",
         "darkweb",
         "Deepscan",
         "dles",
         "DRRURRD",
         "filesync",
         "ftpcrack",
         "fulcrumassets",
         "hacknet",
         "harakiri-sushi",
         "httpworm",
         "killall",
         "linebreak",
         "megacorp",
         "modar",
         "Mult",
         "n00dles",
         "Netscript",
         "paddinglevels",
         "relaysmtp",
         "run4theh111z",
         "rvest",
         "savegame",
         "sonarjs",
         "spiralize",
         "sqlinject",
         "tprint",
         "tprintf",
         "unclickable",
         "xmodar",
         "yourusername"
      ],
      "ignorePaths": [
         "package-lock.json",
         "yarn.lock",
         "node_modules",
         "vscode-extension",
         ".git/objects",
         ".vscode",
         ".vscode-insiders",
         "dist",
         "index.d.ts"
      ]
   }
}
