{
  "name": "bitburner-scripts",
  "version": "1.0.0",
  "private": true,
  "description": "My own scripts for playing Bitburner",
  "keywords": [],
  "homepage": "https://github.com/DrakeCaesar/bitburner-scripts#readme",
  "bugs": {
    "url": "https://github.com/DrakeCaesar/bitburner-scripts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrakeCaesar/bitburner-scripts.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "types": "./NetscriptDefinitions.d.ts",
  "scripts": {
    "dev": "viteburner",
    "lint": "prettier --write . && eslint . --fix && sort-package-json",
    "up": "pnpm upgrade && sort-package-json",
    "watch": "pnpm run watch:init && pnpm run watch:all",
    "watch:all": "concurrently pnpm:watch:transpile pnpm:watch:local pnpm:watch:remote",
    "watch:init": "node build/init.js",
    "watch:local": "node build/watch.js",
    "watch:remote": "bitburner-filesync",
    "watch:transpile": "tsc -w --preserveWatchOutput"
  },
  "prettier": {
    "printWidth": 120,
    "quoteProps": "preserve",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "sonarjs"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": "latest",
          "project": "./tsconfig.json",
          "sourceType": "module"
        },
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "no-constant-condition": [
            "off"
          ],
          "no-restricted-imports": [
            "error",
            {
              "patterns": [
                ".*"
              ]
            }
          ],
          "@typescript-eslint/no-floating-promises": "error"
        }
      }
    ],
    "root": true
  },
  "eslintIgnore": [
    "node_modules/**",
    "dist/**",
    "NetscriptDefinitions.d.ts"
  ],
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "bitburner-filesync": "1.2.0-beta4",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "cspell": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "fast-glob": "^3.3.3",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.4.0",
    "sync-directory": "^6.0.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.44.1",
    "vite": "^4.5.14",
    "viteburner": "^0.5.3"
  },
  "cspell": {
    "version": "0.2",
    "useGitignore": true,
    "words": [
      "avmnite-02h",
      "backreference",
      "backreferences",
      "bitburner",
      "bladeburner",
      "brutessh",
      "codingcontract",
      "CSEC",
      "darkweb",
      "Deepscan",
      "dles",
      "DRRURRD",
      "filesync",
      "fira",
      "ftpcrack",
      "fulcrumassets",
      "hacknet",
      "harakiri-sushi",
      "httpworm",
      "killall",
      "linebreak",
      "megacorp",
      "modar",
      "Mult",
      "n00dles",
      "Netscript",
      "paddinglevels",
      "relaysmtp",
      "run4theh111z",
      "rvest",
      "savegame",
      "scanline",
      "scanlines",
      "sonarjs",
      "spiralize",
      "sqlinject",
      "tprint",
      "tprintf",
      "unclickable",
      "Vigenere",
      "Vigen√®re",
      "viteburner",
      "xmodar",
      "yourusername"
    ],
    "ignorePaths": [
      "package-lock.json",
      "pnpm.lock",
      "node_modules",
      "vscode-extension",
      ".git/objects",
      ".vscode",
      ".vscode-insiders",
      "dist",
      "index.d.ts"
    ]
  }
}
